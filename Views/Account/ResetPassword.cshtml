@model NhaXeMaiLinh.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
}

<h2 class="mb-4 text-center mt-4" style="font-size: 20px;">@ViewData["Title"]</h2>
<div class="d-flex justify-content-center align-items-center">
    <form method="post" asp-action="ResetPassword" style="width:500px;">
    <input type="hidden" asp-for="Token" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label for="Password">Mật khẩu mới</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Xác nhận mật khẩu mới</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
</form>
</div>
<p>
    <a href="/dang-nhap" style='text-decoration:none;'>Quay lại trang đăng nhập</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
