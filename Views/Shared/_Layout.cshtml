@using System.Globalization
@using Microsoft.Extensions.Localization
@using System.Reflection;
@inject IStringLocalizer<SharedResource> localizer;
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    

    <!-- Info -->
    <title>@ViewData["Title"] - NhaXeMaiLinh</title>
    <link rel="shortcut icon" href="favicon.png">

    <!-- Style -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-4.4.1.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/tiny-slider.css" />
    <link rel="stylesheet" href="~/css/chatbot.css" />
    @await RenderSectionAsync("Style", required: false)
    <style>
        .w-10 {
            width: 12% !important;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <nav class="custom-navbar navbar navbar navbar-expand-md navbar-dark bg-dark" arial-label="Furni navigation bar" style="padding-bottom:20px">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="@Url.Content("~/"+"images/logo_mailinh1.png")" class="img-fluid"
                        style="width: 160px; height: auto;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsFurni"
                    aria-controls="navbarsFurni" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsFurni">
                <ul class="custom-navbar-nav navbar-nav ms-auto mb-2 mb-md-0">
                    @* <li class="nav-item @ViewData["home"]"> *@
                   <li class="nav-item @ViewData["home"]">
                        <a class="nav-link" href="/">@localizer["home"]</a>
                    </li>
                    <li><a class="nav-link @ViewData["Tra-cuu"]" href="/lich-trinh">@localizer["timetable"]</a></li>
                    <li><a class="nav-link" href="/tra-cuu">@localizer["ticketinquiry"]</a></li>
                    <li class="nav-item @ViewData["tin-tuc"]">
                        <a class="nav-link" href="/tin-tuc">@localizer["News"]</a>
                    </li>
                    <li><a class="nav-link @ViewData["hoa-don"]" asp-controller="Invoice" asp-action="Index">@localizer["Invoice"]</a></li>
                </ul>

                <partial name="_LoginPartial" />
                    @await Html.PartialAsync("~/Views/Shared/_CulturePartial.cshtml")|
            </div>
        </div>
    </nav>
    <div style="z-index: 20">
        @RenderBody()
    </div>
    <footer class="footer-section">
        <div class="container relative">
            <div class="row g-5 mb-5">
                <div class="col-lg-6">
                    <div class="mb-4 footer-logo-wrap">
                        <a href="#">
                            <img src=@Url.Content("~/"+"images/logo_mailinh.jpg") class="img-fluid"
                                 style="max-width: 400px; height: auto;">
                        </a>
                    </div>
             @*        // dùng biến mảng truy cập chọn đổi ngôn ngữ *@
                    <p class="mb-4 fs-4" style="color: #00613D">
                        TRUNG TÂM TỔNG ĐÀI CSKH <br><span class="fs-3"
                                                          style="color: #EF5222"> 1900 6067 </span>
                    </p>
                    <p class="mb-4 fs-5" style="color: #00613D">CÔNG TY CỔ PHẦN XE KHÁCH MAI LINH</p>
                    <p class="mb-4">
                        @localizer["f0"]: <span style="color: #212121">
                            Số 01 Tô Hiến Thành, Phường 3, Thành phố Đà Lạt,
                            Tỉnh Lâm Đồng,<br> Việt Nam.
                        </span><br> Email: <span style="color: #212121">hotro@mailinh.vn</span>
                    </p>
                    <ul class="list-unstyled custom-social">
                        <li><a href="#"><span class="fa fa-brands fa-facebook-f"></span></a></li>
                        <li><a href="#"><span class="fa fa-brands fa-twitter"></span></a></li>
                        <li><a href="#"><span class="fa fa-brands fa-instagram"></span></a></li>
                        <li><a href="#"><span class="fa fa-brands fa-linkedin"></span></a></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4 footer-logo-wrap">
                        <img src="@Url.Content("~/"+"images/bus.png")" alt="Image" class="img-fluid" style="max-width: 90%; max-height: 90%;">
                    </div>
                    <div class="row links-wrap">
                        <div class="col-6 col-sm-6 col-md-6">
                            <ul class="list-unstyled">
                                <li style="color: #00613D; font-weight: bold;">Mai Linh Lines</li>
                                <li><a href="ve-chung-toi">@localizer["f1"]</a></li>
                                <li><a href="#">@localizer["f5"]</a></li>
                                <li><a href="#">@localizer["f4"]</a></li>
                                <li><a href="#">@localizer["f3"]</a></li>
                            </ul>
                        </div>
                        <div class="col-6 col-sm-6 col-md-5">
                            <ul class="list-unstyled">
                                <li style="color: #212121; font-weight: bold;">@localizer["f6"]</li>
                                <li><a href="#">@localizer["ticketinquiry"]</a></li>
                                <li><a href="#">@localizer["f2"]</a></li>
                                <li><a href="#">@localizer["f8"]</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" asp-fallback-src="/lib/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.21.0/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-4.4.1.js"></script>
    <script src="~/js/tiny-slider.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/chatbot.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @{
        Html.RenderPartial("ChatBot");
    }
</body>
</html>
