@model IEnumerable<NhaXeMaiLinh.Models.Data.TuyenDuong>
@{
    Layout = "~/Areas/Admin/Views/Shared/_dashboard.cshtml";
}
@section Style {
    <style>
        body {
            font-family: Inter, sans-serif;
        }

        .navbar {
            background-color: #343a40;
        }

        .navbar .navbar-text {
            color: white;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .pagination {
            justify-content: center;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
        }
    </style>
}
<div class="container">
    <!-- Hiện thông báo thành công hay thất bại -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Danh sách tuyến đường đã xóa</h4>
        <div class="form-group">
            <select id="statusFilter" class="form-control" onchange="filterTuyenDuong()">
                <option value="@Url.Action("Index", "TuyenDuong", new { area = "Admin" })">Đang hoạt động</option>
                <option value="@Url.Action("dsTuyenduongxoa", "TuyenDuong", new { area = "Admin" })" selected>Đã xóa</option>
            </select>
        </div>

        <a href="#" class="btn"></a>

    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã tuyến đường</th>
                <th>Tên tuyến đường</th>
                <th>Điểm đi</th>
                <th>Điểm đến</th>
                <th>Quãng đường</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TuyenDuongID</td>
                    <td>@item.TenTuyenDuong</td>
                    <td>@item.DiemDi</td>
                    <td>@item.DiemDen</td>
                    <td>@item.QuangDuong</td>
                    <td class="action-buttons">
                        <form action="@Url.Action("Restore", "TuyenDuong", new { area = "Admin", id = item.TuyenDuongID })" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn khôi phục tuyến đường này không?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary btn-sm">Khôi phục</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function filterTuyenDuong() {
            var selectedValue = document.getElementById('statusFilter').value;
            window.location.href = selectedValue;
        }

    </script>
}

